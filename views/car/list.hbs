<h3><a class="btn btn-secondary" href="/car"><i class="fa fa-plus"></i> Create New</a> Car List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Car Name</th>
            <th>Details</th>
            <th>Price</th>
            <th>Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.model}}</td>
            <td>{{this.details}}</td>
            <td>{{this.price}}</td>
            <td>{{this.year}}</td>
            <td>
                <a href="/car/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/car/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>